<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CosplayApp.Views.CosPlan"
             Title="{Binding Name}"
             xmlns:models="clr-namespace:CosplayApp"
             x:DataType="models:CosplayCard">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                               Spacing="10"
                               VerticalOptions="StartAndExpand">

            <Grid ColumnDefinitions="40, Auto" Padding="20">
                <Image Grid.Column="0" Source ="{Binding MainImage}"
               Aspect="AspectFill"/>
                <Entry Grid.Column="1" Text="{Binding Name}" HorizontalOptions="Center" VerticalOptions="Center" FontSize="22"
     VerticalTextAlignment="End"/>
            </Grid>
            <Button Text="Этапы"
                      Clicked="OnToDoClicked"/>
            <Button Text="Save"
                      Clicked="OnSaveClicked" />
            <Button Text="Delete"
                     Clicked="OnDeleteClicked" />
            <Button Text="TakePhoto"
                     Clicked="TakePhoto" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>